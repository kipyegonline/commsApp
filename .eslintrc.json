{
  "extends": ["plugin:react/recommended", "airbnb", "prettier"],
  "env": {
    "node": true,
    "browser": true,
    "jquery": true,
    "es6": true,
    "jest": true
  },
  "parserOptions": {
    "ecmaVersion": 10,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "rules": {
    "semi": [2, "always"],
    "quotes": [2, "double"],

    "indent": 0,
    "react/jsx-filename-extension": "off",
    "react/jsx-indent": [0, 12]
  },
  "plugins": ["react", "prettier"]
}
